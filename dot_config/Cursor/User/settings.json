{
  "window.zoomLevel": 2.0,
  "workbench.productIconTheme": "fluent-icons",
  "editor.minimap.enabled": true,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "jetbrainsMono Nerd Font",
  "terminal.integrated.fontFamily": "jetbrainsmono nerd font",
  "workbench.tree.renderIndentGuides": "none",
  "files.exclude": {
    // "**/__*": true,
    // "**/.*": true,
    "**/.cursor": false,
    "**/.cursor/**": false,
    "**/.env": false
  },
  "explorer.confirmDelete": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "solid",
  "custom-ui-style.stylesheet": {
    ".monaco-editor .cursors-layer .cursor": "animation: pulse 1.5s infinite ease-in-out; background-image: linear-gradient(135deg, #ffaffc 10%, #DA70D6 100%)",
    "@keyframes pulse": "0% { transform: scaleY(0.2); opacity: 0.3; } 50% { transform: scaleY(1); opacity: 1; } 100% { transform: scaleY(0.2); opacity: 0.3; }"
  },
  "git.enableSmartCommit": true,
  "workbench.colorTheme": "dark-jetbrains-color-theme",
  "vim.useSystemClipboard": true
}
